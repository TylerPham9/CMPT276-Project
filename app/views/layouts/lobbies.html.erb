<!DOCTYPE html>
<html>
<head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>


<body>
    <div class="header navbar-static-top">

        <div class = "navHeader container-fluid">
            <!--<nav>-->
                <ul class ="nav navbar-nav">
                    <li><%= link_to image_tag("title.svg", height: '57.5px', width: '190px', alt: "DrawParty"), "/" %></li>
                    <li id=linktohome><%= link_to 'Home', "/" %></li>
                    <li><%= link_to 'Player List', "/playerIndex" %></li>
                    <li><%= link_to 'GameOne', '/lobbies/GameOne', :class => is_active?("GameOne") %></li>
                    <li><%= link_to 'GameTwo', '/lobbies/GameTwo', :class => is_active?("GameTwo") %></li>
                    <li><%= link_to 'GameThree', '/lobbies/GameThree', :class => is_active?("GameThree") %></li>
                    <li><%= link_to 'GameFour', '/lobbies/GameFour', :class => is_active?("GameFour") %></li>
                </ul>
            <!--</nav>-->
            <!--<nav>-->
                <ul class ="nav navbar-nav navbar-right">
                        <% if current_user.guest %>
                            <li><%= link_to(current_user.username, ) %></li>
                        <% else %>
                            <li id="usernameID"><%= link_to(current_user.username, user_path(current_user)) %></li>
                        <% end %>
                        <li id="log-out"><%= link_to "Log out", logout_path, method: :delete %></li>
                </ul>
            <!--</nav>-->
        </div>
    </div>
    <% flash.each do |message_type, message| %>
       <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <div class="container"> <!--yielding to lobbie views i.e. GameOne... -->
   
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script> 
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="//cdn.pubnub.com/pubnub.min.js"></script>
    
        <%= yield %>
    
    </div>
</body>
</html>
